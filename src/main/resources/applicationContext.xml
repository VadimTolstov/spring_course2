<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:musicPlayer.properties"/> <!--показываем, где лежит файл musicPlayer.properties-->

    <bean id="musicBean"
          class="mail.tolstov.v.e.RockMusic">
    </bean>

    <bean id="musicPlayer"
          class="mail.tolstov.v.e.MusicPlayer">
        <property name="music" ref="musicBean"/> <!--внедрение бена через set-->
        <!--  <constructor-arg ref="musicBean"/> внедрение бена через конструктор-->
        <!--  <property name="name" value="Some name"/>  передаем значения в ручную через set-->
        <property name="name" value="${musicPlayer.name}"/>
        <property name="volume" value="${musicPlayer.volume}"/> <!--передаем значения через файл musicPlayer.properties-->
    </bean>

</beans>